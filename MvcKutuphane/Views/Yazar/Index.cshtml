@model List<MvcKutuphane.Models.Entity.TBLYAZAR>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layout.cshtml";
}

<h2>Yazarlar</h2>


<table class="table table-bordered">
    <tr>
        <th>Yazar ID</th>
        <th>Yazar Adı</th>
        <th>Yazar Soyad</th>
        <th>Yazar Detay</th>
        <th>Sil</th>
        <th>Güncelle</th>

    </tr>

    @foreach (var y in Model)
    {
        <tr>
            <td>@y.ID</td>
            <td>@y.AD</td>
            <td>@y.SOYAD</td>
            <td>@y.DETAY</td>
            <td>
                @Html.ActionLink("Sil", "YazarSil", new { id = y.ID },
                    new { @class = "btn btn-danger", onclick = 
                    "return confirm('Silmek İsriyor musunuz?')" })
            </td>
            <td><a href="/Yazar/YazarGetir/@y.ID" class="btn btn-success">Güncelle</a></td>
        </tr>

    }
</table> 
<a href="/Yazar/YazarEkle/" class="btn btn-primary">Yeni Yazar Ekle</a>
